[pytest]
#addopts = -s -v --html=./report/pytestReport.html  --cov=./cases
addopts = -s -v --html=./report/pytestReport.html --alluredir=./report/allure-results -clean=./report/allure-results
xfail_strict=true
markers=
        smoke:
        flow:
        slow:
testpaths = ./cases
python_files = test_*.py
python_classes =Test*
python_functions = test_*